<script src="/js/courier.js"></script>
<h1>Cтраничка Курьера: Текущие заказы</h1>
<table border="1" cellspacing="0" class="table table-striped table-dark">
    <tr class="thead-dark">
        <th>номер заказа</th>
        <th>адрес</th>
        <th>дата доставки</th>
        <th>время доставки</th>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>телефон</th>
        <th>доставлен</th>
        <th>статус</th>
        <th>отмена</th>
    </tr>
    {{#each orderInfo}}
    <tr class="order" id="{{this._id}}">
        <td class="orderNumber">{{this.orderNumber}}</td>
        <td>{{this.address}}</td>
        <td>{{this.deliveryDate}}</td>
        <td>{{this.deliveryTime}}</td>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.phone}}</td>
        <td>

            <button name="submit_param" value="ДОСТАВЛЕН" class='delivery btn btn-success'>ДОСТАВЛЕН</button>

        </td>
        <td class="status">{{this.status}}</td>
        <td>

            <button name="submit_param" value="ОТМЕНЁН" class='deleteButton btn btn-danger'>ОТМЕНИТЬ</button>

        </td>
    </tr>
    {{/each}}
</table>