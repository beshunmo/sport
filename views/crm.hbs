<style>
    .chartHTML div {
        font: 10px sans-serif;
        background-color: blue;
        text-align: center;
        padding: 3px;
        margin: 1px;
        color: white;
    }
</style>

<script>
    d3.selectAll("h1").style("color", "green")

    const data = [10, 20, 14, 34, 56, 78, 43, 12, 45]

    const x = d3.scale.linear()
        .domain([0, d3.max(data)])
        .range([0, 350])

    d3.select('.chartHTML')
        .selectAll('div')
        .data(data)
        .enter().append('div')
        .style('width', function (d) {
            return x(d) + 'px'
        })
        .text(function (d) {
            return d
        })
</script>